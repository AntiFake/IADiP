            </tr>

            @foreach (var item in ViewBag.juniorCompetence)
            {
                <tr class="@item.className">
                    <td>@item.number</td>
                    <td>@item.value</td>
                    <td>@item.text</td>
                </tr>
            }
        </table>

    </div>
</div>

