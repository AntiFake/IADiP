@model IADIP.Models.TestViewModel
@{
    ViewBag.Title = "Тестирование";
}

<h2>@ViewBag.Title</h2>

@if (Model.Survey.Any())
{
    <table class="table table-hover table-responsive text-left">
        <tr>
            <th>
                Вопрос
            </th>
            <th>
                Варианты ответов
            </th>
            <th>
                Легкие
            </th>
            <th>
                Средние
            </th>
            <th>
                Тяжелые
            </th>
        </tr>
        @foreach (var question in Model.Survey)
        {
            <tr>
                <td rowspan="@(question.Options.Count + 1)">
                    @question.Text
                </td>
            </tr>
            foreach (var option in question.Options)
            {
                <tr>
                    <td>
                        @option.Text
                    </td>
                    @foreach (var weight in option.oWeights)
                    {
                        <td>
                            @weight
                        </td>
                    }
                </tr>
            }
        }
    </table>
}
else
{
    @Html.Partial("EmptyTable")
}